@page
@using ClassDemoKaffeWebApp.model;
@model ClassDemoKaffeWebApp.Pages.Kunder.IndexModel
@{
    ViewData["Title"] = "Kunder";
}

<h1 class="jumbotron">Vis Alle Kunder</h1>

<form method="post">
    Vil du oprette en ny kunde tryk på <input type="submit" value="Opret" class="btn btn-primary" />

</form>
<p></p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Kunde Nummer</th>
            <th>Navn</th>
            <th>Telefon</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Kunde k in Model.Kunder)
        {
            <tr>
                <td>@k.KundeNummer</td>
                <td>@k.Navn</td>
                <td>@k.Tlf</td>
                <td><a asp-page="EditKunde" asp-route-nummer="@k.KundeNummer">Ændre</a></td>
            </tr>
        }
    </tbody>
    </table>

    







